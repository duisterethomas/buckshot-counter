                </com.google.android.material.button.MaterialButtonToggleGroup>

                <CheckBox
                    android:clickable="false"
                    android:id="@+id/checkbox2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="50dp" />
            </LinearLayout>

