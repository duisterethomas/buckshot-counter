<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Counters -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <!-- 1st counter -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <!-- Buttons -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp">
                    <com.google.android.material.button.MaterialButton
                        style="@style/PlusButton"
                        android:id="@+id/buttonPlus1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+" />

                    <com.google.android.material.button.MaterialButton
                        style="@style/MinusButton"
                        android:id="@+id/buttonMinus1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-" />

                    <com.google.android.material.button.MaterialButton
                        style="@style/ShotLiveButton"
                        android:id="@+id/buttonShot1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shot"
                        android:visibility="gone"/>
                </LinearLayout>

                <!-- Text -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="66dp"
                    android:orientation="vertical"
                    android:paddingVertical="16dp">
                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Live"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewCount1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textAlignment="center"
                        android:textSize="30sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 2nd counter -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <!-- Text -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="66dp"
                    android:orientation="vertical"
                    android:paddingVertical="16dp">
                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Blank"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewCount2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textAlignment="center"
                        android:textSize="30sp" />
                </LinearLayout>

                <!-- Buttons -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp">

                    <com.google.android.material.button.MaterialButton
                        style="@style/PlusButton"
                        android:id="@+id/buttonPlus2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+" />

                    <com.google.android.material.button.MaterialButton
                        style="@style/MinusButton"
                        android:id="@+id/buttonMinus2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-" />

                    <com.google.android.material.button.MaterialButton
                        style="@style/ShotBlankButton"
                        android:id="@+id/buttonShot2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shot"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Known shells -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="10dp">

            <!-- Shell 1 -->
            <LinearLayout
                android:id="@+id/shell1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="invisible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="50dp"
                    android:paddingHorizontal="16dp"
                    android:text="1"
                    android:textAlignment="textEnd"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/buttonToggleGroup1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleSelection="true">
                    <com.google.android.material.button.MaterialButton
                        style="@style/LiveButton"
                        android:id="@+id/button1_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="Live" />

                    <com.google.android.material.button.MaterialButton
                        style="@style/BlankButton"
                        android:id="@+id/button2_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="Blank" />
                </com.google.android.material.button.MaterialButtonToggleGroup>

                <CheckBox
                    android:clickable="false"
                    android:minWidth="50dp"
                    android:id="@+id/checkbox1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Shell 2 -->
            <LinearLayout
                android:id="@+id/shell2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="invisible">

