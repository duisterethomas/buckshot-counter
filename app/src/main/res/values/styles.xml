<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseButton" parent="Widget.Material3.Button" />

    <style name="BaseThinButton" parent="BaseButton">
        <item name="android:minWidth">60dp</item>
    </style>

    <style name="BaseCounterButton" parent="BaseThinButton">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="PlusButton" parent="BaseCounterButton">
        <item name="backgroundTint">@color/green_button_bg</item>
    </style>

    <style name="MinusButton" parent="BaseCounterButton">
        <item name="backgroundTint">@color/red_button_bg</item>
    </style>

    <style name="BlankButton" parent="BaseButton">
        <item name="backgroundTint">@color/blank_button_bg</item>
    </style>

    <style name="LiveButton" parent="BaseButton">
        <item name="backgroundTint">@color/live_button_bg</item>
    </style>
</resources>