<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseButton" parent="Widget.MaterialComponents.Button">
        <item name="android:minWidth">56dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="BaseCounterButton" parent="BaseButton">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="PlusButton" parent="BaseCounterButton">
        <item name="backgroundTint">@color/green</item>
    </style>

    <style name="MinusButton" parent="BaseCounterButton">
        <item name="backgroundTint">@color/red</item>
    </style>

    <style name="BlankButton" parent="BaseButton">
        <item name="backgroundTint">@color/blank_button_bg</item>
    </style>

    <style name="LiveButton" parent="BaseButton">
        <item name="backgroundTint">@color/live_button_bg</item>
    </style>
</resources>